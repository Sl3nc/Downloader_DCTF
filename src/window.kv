
<Downloader>:
    orientation: 'vertical'
    Label:
        text: 'Para baixar automaticamente seus recibos da DCTF WEB;\nSiga as seguintes instrunções:'
        halign: 'center'

    Label:
        id: instruction_label
        text: 'Instrunção'

    BoxLayout:
        spacing: 20
        padding: 20
        Button:
            text: 'Iniciar'
            on_press: root.send()

        BoxLayout:
            spacing: 10
            orientation: 'vertical'
            Button:
                text: 'Voltar'
                on_press: root.send(1)

            Button:
                text: 'Pular'
                on_press: root.send(2)